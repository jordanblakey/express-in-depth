<form action="/file-upload/{year}/{month}" class="form-horizontal" role="form" enctype="multipart/form-data" method="POST">
  <div class="form-group">
    <label for="fieldName" class="col-sm-2 control">Name</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="file" name="name">
    </div>
  </div> {{!-- End of form-group --}}
  <div class="form-group">
    <label for="fieldEmail" class="col-sm-2 control">Email</label>
    <div class="col-sm-4">
      <input type="email" class="form-control" required id="fieldEmail" name="email">
    </div>
  </div> {{!-- End of form-group --}}
  <div class="form-group">
    <label for="fieldPhoto" class="col-sm-2 control">Vacation photo</label>
    <div class="col-sm-4">
      <input type="file" class="form-control" required accept="image/*" id="fieldPhoto" name="photo">
    </div>
  </div> {{!-- End of form-group --}}
  <div class="form-group">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div> {{!-- End of form-group --}}
</form>